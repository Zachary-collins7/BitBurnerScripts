{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npmBuildAndPostBuild",
            "type": "shell",
            "command": "npm",
            "args": ["run", "build"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "dependsOn": "postBuild"
        },
        {
            "label": "postBuild",
            "type": "shell",
            "command": "${command:ext.bitburner-connector.pushAllFiles}",
            "group": {
                "kind": "build"
                // "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}
